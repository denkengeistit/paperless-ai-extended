# Sample environment variables for consolidation service
# Copy this file to .env or add these variables to your existing .env file

# Consolidation settings
CONSOLIDATION_THRESHOLD=0.8
CONSOLIDATION_BATCH_SIZE=1000
USE_ADVANCED_ALGORITHM=true
ENABLE_PERFORMANCE_MONITORING=true

# Monitoring settings
MONITORING_INTERVAL=30000  # 30 seconds

# Memory management
# To enable garbage collection, run node with --expose-gc flag:
# node --expose-gc server.js
# NODE_OPTIONS="--max-old-space-size=4096"
